@using WebBanXeMay.Models
@model List<XeMay>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .product {
            position: relative;
            width: 200px;
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
            cursor: pointer;
        }

            .product img {
                width: 100%;
                height: auto;
            }

        .price {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 5px 10px;
            display: none;
        }

        .product:hover .price {
            display: block;
        }
    </style>
</head>
<body>
    <h1>Our Products</h1>
    <div class="container">
        @foreach (var xe in Model)
        {
            <div class="product">
                <!-- Since there's no image column, we use a default image from wwwroot/images -->
                <img src="/images/default.jpg" alt="@xe.TenXe" />
                <h2>@xe.TenXe</h2>
                <div class="price">$@xe.Gia</div>
            </div>
        }
    </div>
</body>
</html>